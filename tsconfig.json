{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "~Components/*": [
        "./src/renderer/components/*"
      ],
      "*": ["node_modules/*"],
      "~Common/*": ["./src/common/*"],
    }
  },
  "include": [
    "src/**/*"
  ]
}
